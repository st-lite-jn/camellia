{
	"$schema": "https://schemas.wp.org/wp/6.1/theme.json",
    "version": 2,
    "styles" : {
        "color": {
			"text": "#333333",
            "background": "#ffffff"
		},
        "typography": {
            "fontFamily": "\"Noto Sans JP\", sans-serif",
			"lineHeight": "1.5"
		},
        "elements": {
            "link": {
                "color": {
                    "text": "#004D9F"
                },
                "typography": {
                    "textDecoration": "none"
                },
                ":hover": {
                    "typography": {
                        "textDecoration": "underline"
                    }
                }
            }
        }
    },
    "settings": {
        "layout": {
            "contentSize": "95vw",
            "wideSize": "100vw"
        },
        "color": {
            "background":true ,
            "text": true ,
            "link": true,
            "custom": true,
            "defaultPalette": true,
            "palette": [],
			"customGradient": true,
			"defaultGradients": true,
			"gradients": [],
			"duotone": [],
			"customDuotone": true,
            "defaultDuotone": true
        },
        "border": {
            "color": true,
            "radius": true,
            "width": true
        }
    }
}