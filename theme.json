{
	"$schema": "https://schemas.wp.org/wp/6.2/theme.json",
	"version": 2,
	"settings": {
		"border": {
			"color": true,
			"radius": true,
			"width": true
		},
		"color": {
			"background": true,
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"defaultDuotone": true,
			"defaultGradients": true,
			"defaultPalette": true,
			"duotone": [],
			"gradients": [],
			"link": true,
			"palette":[
				{
					"name": "Dark Black",
					"slug": "dark-black",
					"color": "#1E2022"
				},
				{
					"name": "Light white",
					"slug": "light-white",
					"color": "#DDDDDD"
				},
				{
					"name": "Camellia",
					"slug": "camellia",
					"color": "#e27434"
				},
				{
					"name": "Vivid Blue",
					"slug": "vivid-blue",
					"color": "#004D9F"
				}
			],
			"text": true
		},
		"layout": {
			"contentSize": "96vw",
			"wideSize": "100vw"
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--dark-black)",
			"text": "var(--wp--preset--color--light-white)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--camellia)"
				},
				"typography": {
					"textDecoration": "none"
				},
				":hover": {
					"typography": {
						"textDecoration": "underline"
					}
				}
			},
			"button": {
				"color": {
					"text": "var(--wp--preset--color--light-white)",
					"background":"var(--wp--preset--color--vivid-blue)"
				}
			}
		},
		"typography": {
			"fontFamily": "\"Noto Sans JP\", sans-serif",
			"lineHeight": "1.5"
		}
	}
}